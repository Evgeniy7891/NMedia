<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0sp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="0dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imageLogoNetology"
        app:layout_constraintBottom_toTopOf="@id/timePosts"
        app:layout_constraintEnd_toStartOf="@id/buttonMenu"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/imageLogoNetology"
        app:layout_constraintTop_toTopOf="@+id/imageLogoNetology"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@sample/posts.json/data/title" />

    <ImageView
        android:id="@+id/imageLogoNetology"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/description_image_logo"
        app:layout_constraintBottom_toTopOf="@id/barrier"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        tools:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/timePosts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ellipsize="end"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/barrier"
        app:layout_constraintEnd_toEndOf="@id/titleAuthor"
        app:layout_constraintStart_toEndOf="@+id/imageLogoNetology"
        app:layout_constraintTop_toBottomOf="@id/titleAuthor"
        tools:text="@sample/posts.json/data/time" />

    <ImageButton
        android:id="@+id/buttonMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/button_menu"
        app:layout_constraintBottom_toBottomOf="@id/titleAuthor"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/titleAuthor"
        app:layout_constraintTop_toTopOf="@id/titleAuthor"
        app:srcCompat="@android:drawable/ic_menu_more" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="8dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="8dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="8dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="8dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="imageLogoNetology, buttonMenu"
        tools:layout_editor_absoluteY="116dp" />

    <Space
        android:id="@+id/space"
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/barrier" />

    <TextView
        android:id="@+id/textContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@id/space"
        tools:text="@sample/posts.json/data/text" />

    <ImageView
        android:id="@+id/imageContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/description_image_conten"
        app:layout_constraintBottom_toTopOf="@id/textCountLikes"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@id/textContent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/textCountLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/test_number_999"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottom"
        app:layout_constraintEnd_toStartOf="@id/imageShare"
        app:layout_constraintStart_toEndOf="@id/imageLikes"
        app:layout_constraintTop_toBottomOf="@id/imageContent" />

    <TextView
        android:id="@+id/textCountShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="999988"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottom"
        app:layout_constraintStart_toEndOf="@id/imageShare"
        app:layout_constraintTop_toBottomOf="@id/imageContent" />

    <TextView
        android:id="@+id/textCountViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_views_5"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottom"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/barrierForViews"
        app:layout_constraintTop_toBottomOf="@id/imageContent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierForViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="textCountViews"
        tools:layout_editor_absoluteX="395dp" />

    <ImageView
        android:id="@+id/imageLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottom"
        app:layout_constraintEnd_toStartOf="@id/textCountLikes"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@id/imageContent"
        app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

    <ImageView
        android:id="@+id/imageShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottom"
        app:layout_constraintEnd_toStartOf="@id/textCountShare"
        app:layout_constraintStart_toEndOf="@id/textCountLikes"
        app:layout_constraintTop_toBottomOf="@id/imageContent"
        app:srcCompat="@drawable/ic_baseline_share_24" />

    <ImageView
        android:id="@+id/imageViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottom"
        app:layout_constraintEnd_toStartOf="@id/barrierForViews"
        app:layout_constraintTop_toBottomOf="@id/imageContent"
        app:srcCompat="@drawable/ic_baseline_remove_red_eye_24" />


</androidx.constraintlayout.widget.ConstraintLayout>